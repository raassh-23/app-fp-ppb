<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".translation">

    <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginBottom="12dp"
                >

                <EditText
                    android:id="@+id/InputText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="0.2"
                    android:hint="Hi, Apa kabar?"
                    />
                <ImageButton
                    android:id="@+id/btnTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:src="@drawable/ic_baseline_search_24"
                    android:background="@color/white"
                    android:layout_weight="1"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/tvTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tulisan di gambar" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="isi tulisan" />

            <TextView
                android:id="@+id/tvLangTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bahasa Terdeteksi" />

            <TextView
                android:id="@+id/tvLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLangSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih bahasa" />

            <Spinner
                android:id="@+id/spLangSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />


            <ImageButton
                android:id="@+id/btnBackLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                />
        </LinearLayout>

</FrameLayout>